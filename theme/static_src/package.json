{
  "name": "theme",
  "version": "4.2.0",
  "description": "",
  "scripts": {
    "build:css": "cross-env NODE_ENV=production postcss ./src/styles.css -o ../static/css/dist/styles.css --minify",
    "build:js": "esbuild ./js/index.js --bundle --minify --outfile=../static/js/dist/bundle.js",
    "build": "npm-run-all build:css build:js",
    "dev:css": "cross-env NODE_ENV=development postcss ./src/styles.css -o ../static/css/dist/styles.css --watch",
    "dev:js": "esbuild ./js/index.js --bundle --outfile=../static/js/dist/bundle.js --watch",
    "start": "npm-run-all --parallel dev:*"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@alpinejs/persist": "^3.14.9",
    "@tailwindcss/postcss": "^4.1.11",
    "alpinejs": "^3.14.9",
    "cross-env": "^7.0.3",
    "daisyui": "^5.0.50",
    "esbuild": "^0.25.8",
    "flowbite": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-nested": "^7.0.2",
    "postcss-simple-vars": "^7.0.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.11"
  }
}
